<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomHeader">
        <attr name="header_title" format="string" localization="suggested" />
        <attr name="header_menu" format="boolean" />
        <attr name="header_back" format="boolean" />

    </declare-styleable>

    <declare-styleable name="CropImageView">
        <attr name="cropTop" format="boolean"  />
        <attr name="cropBottom" format="boolean"  />
        <attr name="cropLeft" format="boolean"  />
        <attr name="cropRight" format="boolean"  />


    </declare-styleable>

    <declare-styleable name="CountDownView">
        <attr name="count_down_progress" format="integer" />
        <attr name="count_down_max" format="integer" />

        <attr name="count_down_unfinished_color" format="color" />
        <attr name="count_down_finished_color" format="color" />

        <attr name="count_down_finished_stroke_width" format="dimension" />
        <attr name="count_down_unfinished_stroke_width" format="dimension" />

        <attr name="count_down_text_size" format="dimension" />
        <attr name="count_down_text_color" format="color" />

        <attr name="count_down_prefix_text" format="string" />
        <attr name="count_down_suffix_text" format="string" />
        <attr name="count_down_text" format="string" />

        <attr name="count_down_background_color" format="color" />

        <attr name="count_down_inner_bottom_text" format="string" />
        <attr name="count_down_inner_bottom_text_size" format="dimension" />
        <attr name="count_down_inner_bottom_text_color" format="color" />

        <attr name="count_down_circle_starting_degree" format="integer" />
        <attr name="count_down_show_text" format="boolean" />
        <attr name="count_down_inner_drawable" format="reference" />
    </declare-styleable>

</resources>